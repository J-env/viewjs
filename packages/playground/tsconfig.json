{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "outDir": "dist",
    "declaration": false,
    "noEmit": true,
    "allowJs": false,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "strict": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    // "noUnusedParameters": false,
    // "noImplicitReturns": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src",
    "pages",
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "scripts",
    "**/*.js",
    "**/*.worker.ts"
  ]
}
