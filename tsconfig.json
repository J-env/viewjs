{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "dist",
    "declaration": false,
    "noEmit": true,
    "allowJs": false,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": false,
    // "noImplicitReturns": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@viewjs/*": [
        "packages/*/src"
      ],
      "viewjs": [
        "packages/viewjs/src"
      ]
    },
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
  },
  "include": [
    "packages/global.d.ts",
    "**/*.ts",
    "**/*.d.ts",
    "packages/*/src",
    "packages/*/__tests__",
    "test-dts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "scripts",
    "**/*.js",
    "**/*.worker.ts"
  ]
}
